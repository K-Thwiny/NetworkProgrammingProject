extends layout

block content
	link(rel='stylesheet' href='/stylesheets/signind.css')
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{user.firstName}. Check your details below:
						div#block
							div.user-details
								p Username ---> #{user.username}
								p Email    ---> #{user.email}
								p First Name ---> #{user.firstName} 
								p Last Name ---> #{user.lastName}
						button(href='/signout', class='text-center new-account') Sign Out