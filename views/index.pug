doctype html
html
head
	link(rel='stylesheet', href='/stylesheets/index.css')
	link(rel='stylesheet', href='/stylesheets/other.css')
	script(src='/javascripts/jquery.js')
	body
		div.block
			img(src='/images/finallogo.jpg')
			form(action='/login', method='post')
				input(id='login-email' name='username' type='text' placeholder='Email', required)
				input(id='login-password' name='password' type='password' placeholder='Password', required)
				input(type='submit' value='Sign In')
			a(href='/signup') Register Here
			script.
				$("img").fadeIn(5000);
				$("form").delay(2000).fadeIn(5000);
				$("a").delay(2000).fadeIn(5000);